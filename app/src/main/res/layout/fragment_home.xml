<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalScrollbarPosition="right">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/PhotoRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />
            <Button
                android:id="@+id/hosbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_add_white"
                android:drawableTop="@drawable/ic_local_hospital_black_24dp"
                android:padding="5dp"
                android:text="병원"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/parkingbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_add_white"
                android:drawableTop="@drawable/ic_local_parking_black_24dp"
                android:padding="5dp"
                android:text="공영주차장"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/busbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="180dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_add_white"
                android:drawableTop="@drawable/ic_directions_bus_black_24dp"
                android:padding="5dp"
                android:text="버스"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/disbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="270dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_add_white"
                android:drawableTop="@drawable/ic_disabled_person"
                android:padding="5dp"
                android:text="장애인 편의시설"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/foodbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_add_white"
                android:drawableTop="@drawable/ic_food"
                android:padding="5dp"
                android:text="모범음식점"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/storybtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_add_white"
                android:drawableTop="@drawable/ic_stroytelling"
                android:padding="5dp"
                android:text="스토리텔링"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/basicmapbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:layout_marginLeft="180dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_add_white"
                android:drawableTop="@drawable/ic_map"
                android:padding="5dp"
                android:text="지도"
                android:textColor="#000000"
                android:textSize="16sp"/>



        </RelativeLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>